<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1"
    android:orientation="vertical"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <Button
        android:id="@+id/btnToGenerateLegWorkouts"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="Generate"
        android:layout_below="@+id/editTextNumberOfWorkouts"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/ClearBtnLegs"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:onClick="Clear"
        android:text="Clear"
        android:layout_alignBaseline="@+id/btnToGenerateLegWorkouts"
        android:layout_alignBottom="@+id/btnToGenerateLegWorkouts"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/editTextNumberOfWorkouts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:hint="Enter # of workouts"
        android:inputType="textPersonName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"></EditText>

    <TextView
        android:id="@+id/txtViewEndUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnToGenerateLegWorkouts"
        android:layout_marginBottom="44dp" />

</RelativeLayout>
